@{
    ViewBag.Title = "Rooms";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            position: relative;
        }

        .room-slider {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
        }

        .room-card {
            flex: 0 0 auto;
            width: 300px;
            margin-right: 20px;
            scroll-snap-align: start;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .room-image {
            width: 100%;
            height: 200px;
            background-color: #ccc;
            background-size: cover;
            background-position: center;
        }

        .room-details {
            padding: 20px;
        }

        .room-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .room-description {
            color: #666;
        }

        .room-price {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-top: 10px;
        }

        .reserve-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .reserve-button:hover {
                background-color: #0056b3;
            }

        .status {
            background-color: #ffc107; /* Yellow color for pending status */
            color: #333;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .arrow-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.7);
            border: none;
            color: #333;
            font-size: 20px;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
            transition: background-color 0.3s;
        }

            .arrow-button:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }

        .prev-button {
            left: 10px;
        }

        .next-button {
            right: 10px;
        }

        /* Reservation form styles */
        .reservation-form {
            display: none;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 10px;
        }

            .reservation-form label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .reservation-form input[type="datetime-local"] {
                width: calc(100% - 12px); /* Adjusted for input padding and border */
                padding: 5px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .reservation-form input[type="submit"] {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .reservation-form input[type="submit"]:hover {
                    background-color: #0056b3;
                }

        /* Reservation form styles */
        .reservation-form {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 10px;
        }

            .reservation-form label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .reservation-form input[type="datetime-local"] {
                width: calc(100% - 12px); /* Adjusted for input padding and border */
                padding: 5px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .reservation-form input[type="submit"] {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .reservation-form input[type="submit"]:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <button class="arrow-button prev-button" onclick="scrollRooms(-350)">&#10094;</button>
        <div class="room-slider">
            @for (var i = 1; i <= 6; i++)
            {
                <div class="room-card">
                    <div class="room-image"></div>
                    <div class="room-details">
                        <h3 class="room-title">Room @i</h3>
                        <p class="room-description">This is a description of Room @i.</p>
                        <p class="room-price">$@(400 + i * 100) per month</p>
                        <!-- Button to toggle reservation form -->
                        <button class="reserve-button" onclick="toggleReservationForm('reservation-form-@i')">Reserve</button>
                        <!-- Reservation form -->
                        <form id="reservation-form-@i" class="reservation-form" action="@Url.Action("Reserve", "Home")" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="roomId" value="@i" />
                            <label for="start-time-@i">Start Time:</label>
                            <input type="datetime-local" id="start-time-@i" name="start-time" required>
                            <label for="end-time-@i">End Time:</label>
                            <input type="datetime-local" id="end-time-@i" name="end-time" required>
                            <input type="submit" value="Reserve">
                        </form>
                        <!-- Status will be displayed here -->
                        <div class="status">Pending</div>
                    </div>
                </div>
            }
        </div>
        <button class="arrow-button next-button" onclick="scrollRooms(350)">&#10095;</button>
    </div>

    <script>
        function scrollRooms(offset) {
            const roomSlider = document.querySelector('.room-slider');
            roomSlider.scrollLeft += offset;
        }

        function toggleReservationForm(formId) {
            const form = document.getElementById(formId);
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }
    </script>
</body>
</html>
