@{
    ViewBag.Title = "Rooms";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            position: relative; /* For positioning of arrow buttons */
        }

        .room-slider {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
        }

        .room-card {
            flex: 0 0 auto;
            width: 300px; /* Adjust width of room cards as needed */
            margin-right: 20px; /* Adjust margin between room cards as needed */
            scroll-snap-align: start;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .room-image {
            width: 100%;
            height: 200px;
            background-color: #ccc;
            background-size: cover;
            background-position: center;
        }

        .room-details {
            padding: 20px;
        }

        .room-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .room-description {
            color: #666;
        }

        .room-price {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-top: 10px;
        }

        .reserve-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .reserve-button:hover {
                background-color: #0056b3;
            }

        .status {
            background-color: #ffc107; /* Yellow color for pending status */
            color: #333;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .arrow-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255, 255, 255, 0.7);
            border: none;
            color: #333;
            font-size: 20px;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
            transition: background-color 0.3s;
        }

            .arrow-button:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }

        .prev-button {
            left: 10px;
        }

        .next-button {
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <button class="arrow-button prev-button" onclick="scrollRooms(-350)">&#10094;</button>
        <div class="room-slider">
            @for (var i = 1; i <= 6; i++)
            {
                <div class="room-card">
                    <div class="room-image"></div>
                    <div class="room-details">
                        <h3 class="room-title">Room @i</h3>
                        <p class="room-description">This is a description of Room @i.</p>
                        <p class="room-price">$@(400 + i * 100) per month</p>
                        <button class="reserve-button" onclick="window.location.href='@Url.Action("Reservations", "Home")'">Reserve</button>
                        <!-- Status will be displayed here -->
                        <div class="status">Pending</div>
                    </div>
                </div>
            }
        </div>
        <button class="arrow-button next-button" onclick="scrollRooms(350)">&#10095;</button>
    </div>

    <script>
        function scrollRooms(offset) {
            const roomSlider = document.querySelector('.room-slider');
            roomSlider.scrollLeft += offset;
        }
    </script>
</body>
</html>
