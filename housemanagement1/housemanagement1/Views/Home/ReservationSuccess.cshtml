@{
    ViewBag.Title = "Reservation Success";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        /* Simple button style */
        .button {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
            cursor: pointer;
            margin-right: 10px;
        }

            .button:hover {
                background-color: #0056b3;
            }

        /* Basic form styling */
        .payment-form {
            display: none; /* Initially hidden */
            margin-top: 20px;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input[type="text"],
            .form-group input[type="number"],
            .form-group select {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .form-group input[type="submit"] {
                background-color: #007bff;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #0056b3;
                }

        #waitMessage {
            display: none;
            margin-top: 10px;
            color: #007bff;
        }
    </style>
</head>
<body>
    <h2>Reservation Successful!</h2>
    <p>Your reservation has been successfully saved.</p>

    <!-- Button to toggle payment form -->
    <button id="paymentButton" class="button">Make Payment</button>

    <!-- Payment form -->
    <div id="paymentForm" class="payment-form">
        <h3>Payment Details</h3>
        <form id="paymentFormSubmit">
            <div class="form-group">
                <label for="card_holder_name">Name</label>
                <input type="text" id="card_holder_name" name="card_holder_name" placeholder="Enter Name" required>
            </div>
            <div class="form-group">
                <label for="payment_amount">Payment Amount</label>
                <input type="number" id="payment_amount" name="payment_amount" placeholder="Enter payment amount" required>
            </div>
            <div class="form-group">
                <label for="expiry_month">Expiry Month</label>
                <select id="expiry_month" name="expiry_month" required>
                    <option value="">Select month</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay Now" class="button">
            </div>
        </form>
        <div id="waitMessage">Please wait, processing payment...</div>
    </div>

    <!-- Script to handle toggling of payment form and displaying wait message -->
    <script>
        document.getElementById("paymentButton").addEventListener("click", function() {
            var paymentForm = document.getElementById("paymentForm");
            if (paymentForm.style.display === "none") {
                paymentForm.style.display = "block";
            } else {
                paymentForm.style.display = "none";
            }
        });

        document.getElementById("paymentFormSubmit").addEventListener("submit", function(event) {
            event.preventDefault(); // Prevent form submission
            // Show wait message
            document.getElementById("waitMessage").style.display = "block";
            // Simulate payment processing for 2 seconds
            setTimeout(function() {
                // Hide wait message
                document.getElementById("waitMessage").style.display = "none";
                // Show success message
                alert("Payment successful!");
            }, 2000);
        });
    </script>

    <!-- Button linking to Dashboard -->
    <a href="@Url.Action("Dashboard", "Home")" class="button">Continue</a>
</body>
</html>
